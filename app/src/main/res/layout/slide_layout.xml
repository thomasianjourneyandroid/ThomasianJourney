    <ImageView
        android:id="@+id/onboardingimg"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/onboardingtitle1"
        android:layout_marginTop="30dp"
        android:layout_below="@id/onboardingimg"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get updated to all the events "
        android:textSize="18sp"
        android:fontFamily="@font/montserratsemibold"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/onboardingdesc1"
        android:layout_below="@id/onboardingtitle1"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:maxLines="10"
        android:textAlignment="center"
        android:text="The Thomasian Journey Event Notification System will keep you updated with all the local and university wide events."
        android:textSize="15sp"
        android:fontFamily="@font/montserratregular"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/obcontbutton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/onboardingdesc1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/obbgbtn"
        android:fontFamily="@font/montserratregular"
        android:onClick="contAnim"
        android:text="CONTINUE"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        android:visibility="invisible" />
</RelativeLayout>
