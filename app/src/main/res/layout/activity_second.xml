<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="mobile.thomasianJourney.main.home.HomeActivity"
android:background="#fcfcfc">

<android.support.design.widget.AppBarLayout
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/colappsingtoolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginEnd="64dp"
        app:expandedTitleMarginStart="48dp"
        app:layout_scrollFlags="exitUntilCollapsed|scroll">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tjmov" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarid"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <TextView
            android:id="@+id/studname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="260dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Welcome, Thomasian!"
            android:textColor="@color/colorTop"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_help"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_help"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="260dp"/>

    </android.support.design.widget.CollapsingToolbarLayout>

</android.support.design.widget.AppBarLayout>

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.demotxt.droidsrce.homedashboard.Home"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/ll"
        android:background="@drawable/background_gradient">

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/textdashId"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#dcffffff">

            <TextView
                android:id="@+id/home_studentNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:text=""
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />
        <TextView
            android:id="@+id/home_totalPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:text=""
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/home_currentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/poppinsregular"
            android:text="*Current Date*"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="EventsAnim"
                android:id="@+id/eventId"
                app:cardCornerRadius="10dp"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circlebtnbg1"
                        android:padding="10dp"
                        android:src="@drawable/ic_event" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="View Events"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="PortAnim"
                android:id="@+id/portId"
                app:cardCornerRadius="10dp"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardElevation="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circlebtnbg1"
                        android:src="@drawable/ic_receipt"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppinsmedium"
                        android:layout_marginTop="10dp"
                        android:text="View Portfolio"/>


                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        -----> card view 1 long

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Event Stream"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />


        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:id="@+id/stream1"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="false"
                app:cardCornerRadius="10dp"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false">

                    <TextView
                        android:id="@+id/EventName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:clickable="false"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Science Week Opening Ceremony"
                        android:textSize="15dp"
                        android:fontFamily="@font/poppinsmedium"/>

                    <Button
                        android:id="@+id/streambtn1"
                        android:clickable="false"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Feb 26"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppinssemibold"/>
                    <View
                        android:id="@+id/line1"
                        android:layout_width="4dp"
                        android:layout_height="80dp"
                        android:clickable="false"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/colorPrimary"/>

                </RelativeLayout>




            </android.support.v7.widget.CardView>


        </LinearLayout>

        ---> 2
        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false">


            <android.support.v7.widget.CardView
                android:id="@+id/stream2"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="false"
                app:cardCornerRadius="10dp"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_margin="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false">

                    <TextView
                        android:id="@+id/EventName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Science Week Opening Ceremony"
                        android:textSize="15dp"
                        android:clickable="false"
                        android:fontFamily="@font/poppinsmedium"/>

                    <Button
                        android:id="@+id/streambtn2"
                        android:clickable="false"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Date"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppinssemibold"/>
                    <View
                        android:id="@+id/line1"
                        android:layout_width="4dp"
                        android:layout_height="80dp"
                        android:clickable="false"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/colorPrimary"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        ----> 3

        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false">


            <android.support.v7.widget.CardView
                android:id="@+id/stream3"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="false"
                app:cardCornerRadius="10dp"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false">

                    <TextView
                        android:id="@+id/EventName3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:clickable="false"
                        android:layout_marginBottom="5dp"
                        android:text="Science Week Opening Ceremony"
                        android:textSize="15dp"
                        android:fontFamily="@font/poppinsmedium"/>

                    <Button
                        android:id="@+id/streambtn3"
                        android:clickable="false"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Date"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppinssemibold"/>
                    <View
                        android:id="@+id/line1"
                        android:layout_width="4dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/colorPrimary"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        ----> 4

        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false">


            <android.support.v7.widget.CardView
                android:id="@+id/stream4"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="false"
                app:cardCornerRadius="10dp"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_margin="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false">

                    <TextView
                        android:id="@+id/EventName4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Science Week Opening Ceremony"
                        android:clickable="false"
                        android:textSize="15dp"
                        android:fontFamily="@font/poppinsmedium"/>


                    <Button
                        android:id="@+id/button1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:clickable="false"
                        android:layout_marginBottom="5dp"
                        android:text="Date"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppinssemibold"/>
                    <View
                        android:id="@+id/line1"
                        android:layout_width="4dp"
                        android:clickable="false"
                        android:layout_height="80dp"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/colorPrimary"/>

                </RelativeLayout>




            </android.support.v7.widget.CardView>


        </LinearLayout>



    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>